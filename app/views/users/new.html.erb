<h1 align="center"> SIGN UP </h1>
<% if @user.errors.messages.length > 0 %>
<h2>The following errors prevented your details from saving:</h2>
    <ul>
<% @user.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
        <% end %>
        </ul>
        <% end %>
<div class="row">
 <div class="col-xs-12">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :username %>
   </div>
   <div class="col-sm-8">
    <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :age %>
   </div>
   <div class="col-sm-8">
    <%= f.number_field :age, class: "form-control", placeholder: "How Old Are You?" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :bio %>
    </div>
   <div class="col-sm-8">
    <%= f.text_field :bio, class: "form-control", placeholder: "Tell Us About Yourself" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
   <%= f.label :password %>
   </div>
   <div class="col-sm-8">
    <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
   </div>
  </div>  
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
   
   
<h5 align="center"><%= f.submit class: "btn btn-success btn-large" %></h5 align="center">
   </div>
  </div>
<h2 align="center"><%= link_to "Actually, I Changed My Mind, I Don't Want To Join This Exclusive Club...", welcome_path %></h2>

<% end %> 