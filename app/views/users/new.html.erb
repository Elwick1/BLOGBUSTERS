<h1 align="center"> SIGN UP </h1>
<% if @user.errors.any? %>
 <div class="row">
  <div class="col-xs-8 col-xs-offset-2">
   <div class="panel panel-danger">
    <div class="panel-heading">
     <h2 class="panel-title">
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being created:
     </h2>
     <div class="panel-body">
      <ul>
       <% @user.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
       <% end %>
      </ul>
     </div>
    </div>
   </div>
  </div>
 </div>
 <% end %>
 <br><br>
<div class="row">
 <div class="col-xs-12">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-4">
    <%= f.label :username %>
   </div>
   <div class="col-sm-4">
    <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-4">
    <%= f.label :age %>
   </div>
   <div class="col-sm-4">
    <%= f.number_field :age, class: "form-control", placeholder: "How Old Are You?" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-4">
    <%= f.label :bio %>
    </div>
   <div class="col-sm-4">
    <%= f.text_field :bio, class: "form-control", placeholder: "Tell Us About Yourself" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-4">
   <%= f.label :password %>
   </div>
   <div class="col-sm-4">
    <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
   </div>
  </div>  
  <div class="form-group">
   <br><br>
   <h5 align="center"><%= f.submit class: "btn btn-success btn-large" %></h5>
   </div>
  </div>
  <br><br>
  <br><br>
  <br><br>
<h2 align="center"><%= link_to "Actually, I Changed My Mind, I Don't Want To Join This Exclusive Club...", welcome_path, class: "btn btn-success btn-large" %></h2>
<% end %> 